# Default server configuration
#
events {
    worker_connections 1024;
}

http {
    server {
        include /etc/nginx/mime.types;
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location / {
            try_files $uri $uri/ =404;
        }

        location /readme {
            try_files $uri $uri/ /readme.html;
        }

        location /phase1 {
            try_files $uri $uri/ /phase1.html;
        }

        location /foo/bar {
            try_files $uri $uri/ /foo.bar.html;
        }

        location /foo {
            try_files $uri $uri/ /ascii-chess.html;
        }

        location /ascii-chess {
            try_files $uri $uri/ /ascii-chess.html;
        }
    }
}
